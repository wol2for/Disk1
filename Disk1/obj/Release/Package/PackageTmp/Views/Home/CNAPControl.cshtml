@model IEnumerable<Disk1.Models.bd.ControlCNAP>
@using Disk1.Helpers;
@{
    ViewBag.Title = "Контроль цнап";
}
<style type="text/css">
    @@media print {
        #public-table * {
            display: none;
        }

        footer {
            display: none;
        }
    }
</style>

<div class="row">
    <div class="col-sm-12" style="text-align:center;">
        <h3>Контроль цнап</h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-12" style="text-align:right;">
        <button type="button" onclick="window.print()" class="btn">Печать</button>
    </div>
</div>
<br />
<div class="table-responsive">
    <table class="table" border="1" style="border-collapse: separate;">
        <tr>
            <th>
                Примітка
            </th>
            <th>
                ПІБ
            </th>
            <th>
                Адреса
            </th>
            <th>
                Віддала
            </th>
            <th>
                Забрала
            </th>
        </tr>

        @foreach (var item in Model)
        {
            if (string.IsNullOrEmpty(item.Got.ToString()))
            {
                <tr style="background-color:rgba(164, 194, 244, 0.65);">
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FIO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", item.Gave)
                    </td>
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", item.Got)
                    </td>
                </tr>
                continue;
            }
            <tr style="background-color:rgba(255, 217, 102, 1);">
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.Gave)
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.Got)
                </td>
            </tr>

        }
    </table>
</div>