@model IEnumerable<Disk1.Models.bd.CNAP>
@using Disk1.Helpers;
@{
    ViewBag.Title = "Правый берег";
}

<div class="row">
    <div class="col-sm-2 col-sm-offset-10" style="text-align:right;">
        
            @Html.ActionLink("Добавить", "Create",null, new { role = "button", @class = "btn btn-success", style = "width:100%" })
        
    </div>
    
    <div class="col-sm-12" style="text-align:center;">
        <h3>Правый берег</h3>
    </div>
    
</div>

<div class="table-responsive">
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Got)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Who)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>Edit</th>
        </tr>

        @foreach (var item in Model)
        {
            if (string.IsNullOrEmpty(item.Got.ToString()))
            {
                <tr style="background-color:rgba(164, 194, 244, 0.65);">
                    <td>
                        @Html.DisplayFor(modelItem => item.FIO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Got)
                    </td>
                    <td>
                        @WhoHelper.Who(Html, item.Who)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    </td>
                </tr>
                continue;
            }

            <tr style="background-color:rgba(255, 217, 102, 1);">
                <td>
                    @Html.DisplayFor(modelItem => item.FIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Got)
                </td>
                <td>
                    @WhoHelper.Who(Html, item.Who)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

</div>